{
  "version": 2,
  "builds": [
    { "src": "index.js",   "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/signup",     "dest": "/index.js" },
    { "src": "/signin",     "dest": "/index.js" },
    { "src": "/todo(?:/.*)?", "dest": "/index.js" },
    { "src": "/(.*)",       "dest": "/public/$1" }
  ]
}
